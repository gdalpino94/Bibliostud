<div align="right">
<span class="active"><a href="/utentes/new">Registrati<span class="sr-only">(current)</span></a></span>
</div>
<div class="col-md-4 col-md-offset-4">
<%= form_for(:session, url: login_path) do |f| %>
			<br>
            <%= f.text_field :username, class: 'form-control' ,placeholder: "nome utente" %>
            <br>
            <%= f.password_field :password, class: 'form-control' ,placeholder: "password" %>
            <br>
            <div align="center">
            <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
<% end %>

</div>