
<div class="panel panel-primary col-md-4 col-md-offset-4  panel-heading">
<div class=" panel-heading">
<h3 align="center">Nuovo annuncio</h3>
</div>
<br>
<div class=" panel-body" >
<div class="col-md-8 col-md-offset-2">
<%= simple_form_for @annuncio do |f| %>
	<%= f.input :descrizione, placeholder: "descrizione...",label: false %>
	<%= f.input :prezzo, placeholder: "prezzo...",label: false %>
	<div align="center" padding="10p"><%= f.submit "Pubblica annuncio", class: "btn btn-primary" ,label: false %></div><br>
<% end %>
</div>
</div>
</div>
