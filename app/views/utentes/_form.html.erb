
<div class="panel panel-primary col-md-4 col-md-offset-4  panel-heading">
<div class=" panel-heading">
<h3 align="center">Registrazione</h3>
</div>
<br>
<div class=" panel-body" >
<div class="col-md-8 col-md-offset-2">
<%= simple_form_for @utente do |f| %>
	<%= f.input :username, placeholder: "username...",label: false %>
	<%= f.input :nome, placeholder: "nome...",label: false %>
	<%= f.input :cognome, placeholder: "cognome..." ,label: false %>
	<%= f.input :email, placeholder: "email..." ,label: false %>
	<%= f.input :telefono, placeholder: "telefono...",label: false %>
	<%= f.input :password, placeholder: "password..." ,label: false %>
	<%= f.input :password_confirmation , placeholder: "conferma password...",label: false%>
	<div align="center" padding="10p"><%= f.submit "Crea account", class: "btn btn-primary" ,label: false %></div><br>
<% end %>
</div>
</div>
</div>
